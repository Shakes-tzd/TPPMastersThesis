@techreport{laura_barreto_analysis_2011,
	title = {Analysis for {Stakeholders} on {Formalization} in the {Artisanal} and {Small}-scale {Gold} {Mining} {Sector} {Based} on {Experiences} in {Latin} {America}, {Africa} and {Asia}.},
