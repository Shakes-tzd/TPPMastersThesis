	keywords = {Peru, Data mining, Deforestation, Forests, Land use, Metallic mercury, Mining engineering, Rivers},
	pages = {e18875},
	file = {Full Text PDF:/Users/shakes/Zotero/storage/WCBX7CQ3/Swenson et al. - 2011 - Gold Mining in the Peruvian Amazon Global Prices,.pdf:application/pdf;Snapshot:/Users/shakes/Zotero/storage/TVZ69ZKV/article.html:text/html},
